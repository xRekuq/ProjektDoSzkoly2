<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SzafkiSzkolne.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SzafkiSzkolne"
    xmlns:views="clr-namespace:SzafkiSzkolne.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SzafkiSzkolne">

    <TabBar>

        <ShellContent
        Title="Wszystkie szafki"
        ContentTemplate="{DataTemplate views:ManageAllLockers}"
        Route="//ManageAllLockers"/>

        <ShellContent
        Title="Zarządzaj szafką"
        ContentTemplate="{DataTemplate views:ManageLocker}"/>

        <ShellContent
        Title="Test"
        ContentTemplate="{DataTemplate views:TestView}"/>

    </TabBar>
</Shell>
